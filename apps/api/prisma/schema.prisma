generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Models for a small POS application
model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  priceCents  Int      // price in cents to avoid float issues
  sku         String?  @unique
  stock       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  OrderItems  OrderItem[]
}

model Order {
  id         Int         @id @default(autoincrement())
  totalCents Int
  createdAt  DateTime    @default(now())
  items      OrderItem[]
}

model OrderItem {
  id         Int     @id @default(autoincrement())
  order      Order   @relation(fields: [orderId], references: [id])
  orderId    Int
  product    Product @relation(fields: [productId], references: [id])
  productId  Int
  quantity   Int
  unitPrice  Int // snapshot price in cents
}
